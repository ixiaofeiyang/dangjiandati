/* miniprogram/pages/home/home.wxss */
.page{
    position: relative;
    background: url(http://file.xiaomutong.com.cn/img2020091001.jpeg) no-repeat center top;
    background-size: 100% auto;
    padding-top: 120rpx;
}
.page .footer{
    z-index: 99;
    position: fixed;
    bottom: 0;
}
.page .footer image{
    z-index: 99;
}
.page .body{
    padding-top: 80rpx;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}

.page .body .img1{
    width: 247rpx;
    height: 164rpx;
}

.page .body .img2{
    width: 560rpx;
    height: 160rpx;
    padding: 70rpx 0;
}

.page .body .img3{
    padding: 20rpx 0;
    width: 323rpx;
    height: 51rpx;

}


.page .body .button{
    z-index: 9;
    margin-top: 50rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}
.page .body .button .btn1{
    width: 150rpx;
    padding: 10rpx 30rpx;
    background: #f00;
    box-shadow: 1px 1px 3px #f00;
    border-radius: 3px;
    text-align: center;
    font-size: 14px;
    color: #fff;
}

.page .body .button .btn2{
    width: 150rpx;
    padding: 10rpx 30rpx;
    background: #f00;
    box-shadow: 1px 1px 3px #f00;
    border-radius: 3px;
    text-align: center;
    font-size: 14px;
    color: #fff;
    margin: 0 20rpx;
}

.page .body .button .btn3{
    width: 150rpx;
    padding: 10rpx 30rpx;
    background: #f00;
    box-shadow: 1px 1px 3px #f00;
    border-radius: 3px;
    text-align: center;
    font-size: 14px;
    color: #fff;
}
.page .body .p2{
    padding-top: 20rpx;
    color: #f00;
    font-size: 40rpx;
    font-weight: bold;
}

.page .body .p3{
    color: #f00;
    font-size: 40rpx;
    font-weight: bold;
}

.page .body .p4{
    color: #f00;
    padding: 20rpx 0;
    font-size: 40rpx;
}
.page .about{
    position: absolute;
    top: 200rpx;
    right: 10rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #f00;
    box-shadow: 1px 1px 3px #f00;
    color: #fff;

    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    
}